{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "suppressExcessPropertyErrors": true,
    "incremental": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "tmp"
  ]
}